<%-include('../partials/header')-%> 
<div class=" mt-5">
    <div class="container" style="margin-left: 300px; margin-top: 100px;">

        <div class="row clearfix mt-10">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card container">
                   
                    <div class="body">
                        <h2 class="card-inside-title">Create Category</h2>
                        <%-include('../partials/messages')-%>
                        <div class="row clearfix">
                            <form class="col-sm-12" action="/create-cat" enctype="multipart/form-data" method="POST">
                                <div class="form-group">
                                    <input type="hidden" name="type" value="admin">
                                    <div class="form-line">
                                        <input type="text" name="name" class="form-control" placeholder="Enter name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="number" name="time" class="form-control" placeholder="Enter duration" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="number" name="perimeter" class="form-control" placeholder="Enter Perimeter" />
                                    </div>
                                </div>
                                <div class="form-group px-0">
                                    <textarea name="desc" rows="5" cols="5" placeholder="Please enter the description of the category... And please don't forget the ENTER key press multiple times :)"
                                    style="overflow: hidden; overflow-wrap: break-word; height: 30px;" class="form-control no-resize auto-growth"></textarea>
                                </div>
                                <input type="file" name="singleImage" >
                                <button type="submit" class="btn btn-primary m-t-15 waves-effect btn-block">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<%-include('../partials/footer')-%> 
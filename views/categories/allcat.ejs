<%- include('../partials/header') -%> 

<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h2>
                            <strong>Categories</strong> Table</h2>
                            <%- include('../partials/messages') -%>
                       
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Duration</th>
                                        <th>Perimeter</th>
                                        <th>Description</th>
                                        <th>Slug</th>
                                        <th>Create At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach((category)=>{ %>
                                    <tr>
                                        <td><img src="<%= category.imgUrl %>" width="50" alt=""></td>
                                        <td><%= category.name %></td>
                                        <td><%= category.time %></td>
                                        <td><%= category.perimeter %></td>
                                        <td><%= category.desc %></td>
                                        <td><%= category.slug %></td>
                                        <td><%= category.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                        <td>
                                            <a href="/edit/cat/<%= category.id %> " class="btn-hover btn-border-radius color-6 p-3"><i class="fa fa-edit"></i> edit</a>
                                            <form action="/delete/cat/<%= category.id %>?_method=delete" style="display: inline;" method="POST">
                                                <input type="hidden" name="_method" value="delete">
                                                <button class="btn-hover btn-border-radius color-2" type="submit" style="cursor: pointer;"><i class="fa fa-trash"></i> delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Duration</th>
                                        <th>Perimeter</th>
                                        <th>Description</th>
                                        <th>Slug</th>
                                        <th>Create At</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
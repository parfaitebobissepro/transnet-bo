<%- include('../partials/header') -%>

<div class=" mt-5">
    <div class="container" style="margin-left: 300px; margin-top: 100px;">

        <div class="row clearfix mt-10">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card container">
                   
                    <div class="body">
                        <h2 class="card-inside-title">Update Password</h2>
                        <%-include('../partials/messages')-%>
                        <div class="row clearfix">
                            <form class="col-sm-12" action="/password/change" method="POST">
                                <div class="form-group">
                                    <input type="hidden" name="type" value="admin">
                                    <div class="form-line">
                                        <input type="password" name="password" class="form-control" placeholder="Password" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="password" name="confirmpassword" class="form-control" placeholder="Confirm password" />
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary m-t-15 waves-effect btn-block">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') -%>
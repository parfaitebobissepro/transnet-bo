<%- include('../partials/header') -%> 
<style>
    .statuu{
        margin: 0;
        background: #4068a3;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
    .statuuno{
        margin: 0;
        background: hsl(44, 90%, 58%);
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;">Liste des commandes</h3>
                        <h5 style="margin-top: 1rem;"><%= users.length %> commande(s)</h5>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Id Cmd</th>
                                        <th>Transporteur</th>
                                        <th>Utilisateur</th>
                                        <th>Type</th>
                                        <th>Produit</th>
                                        <th>Poids</th>
                                        <th>Fragilité</th>
                                        <th>Départ</th>
                                        <th>Arrivée</th>
                                        <th>Montant</th>
                                        <th>Statut</th>
                                        <th>Enregistrée le</th>
                                        <!-- <th>Actions</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user)=>{ %>
                                    <tr>
                                        <td><%= user.cmd %></td>
                                        <td><%= user.transporteur_id ? user.transporteur_id.name : "" %></td>
                                        <td><%= user.user_id.name %> <%= user.user_id.prenom %></td>
                                        <td><%= user.user_id.type %></td>
                                        <td><%= user.produit %></td>
                                        <td><%= user.poids %></td>
                                        <td><%= user.fragilite %></td>
                                        <td><%= user.depart %></td>
                                        <td><%= user.arrivee %></td>
                                        <td><%= user.montant %></td>
                                        <td>
                                            <% if(user.statut == "En attente"){ %>
                                                <p class="statuuno">
                                                    <%= user.statut %> &nbsp;<span class="fa fa-times-circle" style="color: #fff;"></span>
                                                </p>
                                            <% }else{ %>
                                                <p class="statuu">
                                                    <%= user.statut %> &nbsp;<span class="fa fa-check-circle" style="color: #78ae61;"></span>
                                                </p>
                                            <% } %>
                                        </td>
                                        <td><%= user.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
<%- include('../partials/header') -%> 
<style>
    .statuu{
        margin: 0;
        background: #4068a3;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
    .statuuno{
        margin: 0;
        background: #f44336;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;">Liste des messages du chat</h3>
                        <h5 style="margin-top: 1rem;"><%= chatconvers.length %> Message(s)</h5>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Emetteur</th>
                                        <th>Recepteur</th>
                                        <th>Objet</th>
                                        <th>Message</th>
                                        <th>Fichier</th>
                                        <th>Envoyé le</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% chatconvers.forEach((chat)=>{ %>
                                        <tr>
                                            <td><%= chat.from.name %></td>
                                            <td><%= chat.to.name %></td>
                                            <td><%= chat.objet %></td>
                                            <td><%= chat.message %></td>
                                            <td>
                                                <% if(chat.file != "" && chat.file != undefined){ %>
                                                    <a href="<%= chat.file %>" target="_blank" title="Voir la pièce"> Voir le fichier<i class="material-icons" style="font-size:15px;position: relative;top: 3px;">remove_red_eye</i></a>
                                                <% }else{ %> 
                                                    Aucun fichier joint
                                                <% } %> 
                                            </td>
                                            <td><%= chat.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                        </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
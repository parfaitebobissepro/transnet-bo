<%- include('../partials/header') -%> 

<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h2>
                            <strong>Alerts</strong> Table</h2>
                            <%- include('../partials/messages') -%>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100">
                                <thead>
                                    <tr>
                                        <th>Latitude</th>
                                        <th>Longitude</th>
                                        <th>Description</th>
                                        <th>Posted By</th>
                                        <th>Category</th>
                                        <th>Address</th>
                                        <th>Active</th>
                                        <th>Create At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% alerts.forEach((alert)=>{ %>
                                    <tr>
                                        <td><%= alert.lat %></td>
                                        <td><%= alert.long %></td>
                                        <td><%= alert.desc %></td>
                                        <td><%= alert.postedBy ? alert.postedBy.phone : 'pas de phone' %></td>
                                        <td><%= alert.category.name %></td>
                                        <td><%= alert.address %></td>
                                        <td><%= alert.active %></td>
                                        <td><%= alert.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                        <td>
                                            <form action="/delete/alert/<%= alert.id %>?_method=delete" style="display: inline;" method="POST">
                                                <input type="hidden" name="_method" value="delete">
                                                <button class="btn-hover btn-border-radius color-2" type="submit" style="cursor: pointer;"><i class="fa fa-trash"></i> delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Latitude</th>
                                        <th>Longitude</th>
                                        <th>Description</th>
                                        <th>Posted By</th>
                                        <th>Category</th>
                                        <th>Address</th>
                                        <th>Active</th>
                                        <th>Create At</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
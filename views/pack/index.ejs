<%- include('../partials/header') -%> 
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;">Liste des packs</h3>
                        <h5 style="margin-top: 1rem;"><%= users.length %> Pack(s)</h5>
                        <div class="header-dropdown m-r--5">
                            <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/pack/add'">Ajouter</button>
                        </div>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Montant</th>
                                        <th>Montant détaillé</th>
                                        <th>Type</th>
                                        <th>Active</th>
                                        <th>Crée le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user)=>{ %>
                                    <tr>
                                        <td><%= user.nom %></td>
                                        <td><%= user.montant %> €</td>
                                        <td><%= user.montant_lettre %></td>
                                        <td><%= user.type %></td>
                                        <% if(user.active == "1") { %>
                                          <td>
                                            <div class="form-check form-check-radio">
                                              <label>
                                                  <input name="active" type="checkbox" class="filled-in active pack-activate" checked value="<%= user.id %>">
                                                  <span class="yesorno">Oui</span>
                                              </label>
                                            </div>
                                          </td>
                                        <% }else{ %>
                                          <td>
                                            <div class="form-check form-check-radio">
                                              <label>
                                                  <input name="active" type="checkbox" class="filled-in active pack-activate" value="<%= user.id %>">
                                                  <span class="yesorno">Non</span>
                                              </label>
                                            </div>
                                          </td>
                                        <% } %>
                                        <td><%= user.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                        <td>
                                            <a href="/dashboard/pack/edit/<%= user.id %>" class="btn btn-tbl-edit" title="Modifier">
                                                <i class="material-icons">create</i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>

<%- include('../partials/footer') -%> 
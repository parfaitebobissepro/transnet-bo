<%-include('../partials/header')-%> 
<style>
    .languesave{
        width: 100%;
    }
    input[type=text], input[type=email], input[type=number]{
      border: 1px solid #0f3042 !important;
      border-radius: 5px !important;
      background: transparent !important;
      padding: 0px 7px !important;
    }
    input[type=text]:focus, input[type=email]:focus, input[type=number]:focus{
      border: 1px solid #78ae61 !important;
      -webkit-box-shadow: 0 1px 0 0 #78ae61 !important;
      box-shadow: 0 1px 0 0 #78ae61 !important;
    }
    .form-group .form-control{
        width: 97% !important;
    }
    .eleve_form, .ecole_form{
        display: none;
        margin-top: 1rem;
    }
    .usertype_selector h3{
        text-align: center;
    }
    .usertype_selector{
        border: 1px #4169a3 solid;
        color: black;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector.active{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector:hover{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        -webkit-transition: background-color 400ms linear;
        -ms-transition: background-color 400ms linear;
        transition: background-color 400ms linear;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
        cursor: pointer;
    }
    .divselectorentoure{
        padding: 1rem;
    }
    .addinguser hr{
        width: 100%;
        margin-bottom: 2rem;
        border-top: 2px solid rgb(64 104 163);
    }
</style>
<section class="content addinguser">
    <div class="container-fluid">
        <div class="content" style="padding-top:30px;">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Ajouter</strong> un pack
                                </h2>
                            </div>
                            <div class="body">
                                <div class="row">
                                    <form class="packsave">
                                        <div class="row" style="margin:1rem;">
                                            <input type="hidden" name="id_pack" value="no">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Nom du pack *</label>
                                                    <input type="text" class="form-control" placeholder="Nom du pack" name="nom">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label for="">Montant du pack *</label>
                                                    <input type="number" class="form-control" placeholder="Montant du pack" name="montant">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label for="">Montant détaillé *</label>
                                                    <input type="text" class="form-control" placeholder="Montant détaillé" name="montant_lettre">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Type de pack *</label>
                                                    <select name="type" id="" class="form-control typepack">
                                                        <option value="Ecole">Ecole</option>
                                                        <option value="Etudiant">Etudiant</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Endroit *</label>
                                                    <select id="place" class="form-control">
                                                        <option value="France">France</option>
                                                        <option value="Afrique">Afrique</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <h5>OPTIONS</h5>
                                                <p>Mettre -1 pour des options illimitées</p>
                                            </div>
                                            <div class="col-md-12 essai_switch" style="display: none;">
                                                <div class="form-group">
                                                    <label for="">Candidatures *</label>
                                                    <input type="text" class="form-control option1" placeholder="Nombre de Candidatures">
                                                    <!-- <div class="form-group">
                                                        <label for="">Essai ? </label>
                                                        <div class="switch" style="margin-left: 2rem;">
                                                            <label>Non
                                                                <input type="checkbox" name="essai">
                                                                <span class="lever"></span>Oui</label>
                                                        </div>
                                                    </div> -->
                                                </div>
                                            </div>
                                            <div class="col-md-3 ecole_switch">
                                                <div class="form-group">
                                                    <label for="">Formations *</label>
                                                    <input type="text" class="form-control option2" placeholder="Nombre de Formations">
                                                </div>
                                            </div>
                                            <div class="col-md-3 ecole_switch">
                                                <div class="form-group">
                                                    <label for="">Renouvellement *</label>
                                                    <input type="text" class="form-control option3" placeholder="Nombre de Renouvellements">
                                                </div>
                                            </div>
                                            <div class="col-md-3 ecole_switch">
                                                <div class="form-group">
                                                    <label for="">Durée (en mois) *</label>
                                                    <input type="text" class="form-control option4" placeholder="Durée">
                                                </div>
                                            </div>
                                            <div class="col-md-3 ecole_switch">
                                                <div class="form-group">
                                                    <label for="">En vedette *</label>
                                                    <input type="text" class="form-control option5" placeholder="En vedette">
                                                </div>
                                            </div>
                                            <div class="col-md-12" style="display: flex;justify-content: start;">
                                                <button class="btn-hover btn-border-radius color-7 add_option" style="margin: 0;margin-bottom: 1rem;width: 20%;">Ajouter une option +</button>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group" style="display: flex;">
                                                    <label for="">Aide logement </label>
                                                    <div class="switch" style="margin-left: 2rem;">
                                                        <label>Non
                                                            <input type="checkbox" class="aide_logement">
                                                            <span class="lever"></span>Oui</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group" style="display: flex;">
                                                    <label for="">Aide post visa </label>
                                                    <div class="switch" style="margin-left: 2rem;">
                                                        <label>Non
                                                            <input type="checkbox" class="aide_postvisa">
                                                            <span class="lever"></span>Oui</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12" style="display: flex;justify-content: start;flex-direction: column;">
                                                <p>Pour mettre en gras, ajouter: "&lt;strong&gt;Le mot ou la phrase à mettre en gras&lt;/strong&gt;"</p>
                                                <p>Pour mettre infini, ajouter: "&lt;strong class="ion-ios-infinite"&gt;&lt;/strong&gt;"</p>
                                            </div>
                                            <section class="description-list" style="width: 100%;">
                                                
                                            </section>
                                        </div>
                                        <div class="col-md-12" style="display: flex;justify-content: center;">
                                            <button class="btn-hover btn-border-radius color-7 submit_pack" attr-type="save">Sauvegarder</button>
                                        </div>
                                    </form> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('../partials/footer')-%> 
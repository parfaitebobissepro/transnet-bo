<%-include('../partials/header')-%> 
<style>
    .formationsave{
        width: 100%;
    }
    input[type=text], input[type=email]{
      border: 1px solid #0f3042 !important;
      border-radius: 5px !important;
      background: transparent !important;
      padding: 0px 7px !important;
    }
    input[type=text]:focus, input[type=email]:focus{
      border: 1px solid #78ae61 !important;
      -webkit-box-shadow: 0 1px 0 0 #78ae61 !important;
      box-shadow: 0 1px 0 0 #78ae61 !important;
    }
    .form-group .form-control{
        width: 97% !important;
    }
    .eleve_form, .ecole_form{
        display: none;
        margin-top: 1rem;
    }
    .usertype_selector h3{
        text-align: center;
    }
    .usertype_selector{
        border: 1px #4169a3 solid;
        color: black;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector.active{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector:hover{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        -webkit-transition: background-color 400ms linear;
        -ms-transition: background-color 400ms linear;
        transition: background-color 400ms linear;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
        cursor: pointer;
    }
    .divselectorentoure{
        padding: 1rem;
    }
    .addinguser hr{
        width: 100%;
        margin-bottom: 2rem;
        border-top: 2px solid rgb(64 104 163);
    }
    .ms-choice>span {
        position: absolute;
        top: 5px;
    }
    .languesa{
        padding: 0;
    }
</style>
<section class="content addinguser">
    <div class="container-fluid">
        <div class="content" style="padding-top:30px;">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Modifier</strong> une r√©ponse mail
                                </h2>
                            </div>
                            <div class="body">
                                <div class="row">
                                    <form class="reponsesave">
                                        <input type="hidden" name="id_reponse" value="<%= cand._id %>">
                                        <input type="hidden" name="type_req" value="edit">
                                        <div class="row" style="padding: 2rem;">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="">Ecole *</label>
                                                    <select class="form-control" name="user_id">
                                                        <% user.forEach((item)=>{ %>
                                                            <option value="<%= item._id %>" <%= item._id.toString() == cand.user_id.toString() ? "selected":"" %>><%= item.nom_ecole %></option>
                                                        <% }) %> 
                                                    </select>   
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Sujet du mail d'acceptation de candidature *</label>
                                                    <input type="text" class="form-control" name="subject_ok" value="<%= cand.subject_ok %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Sujet du mail de refus de candidature *</label>
                                                    <input type="text" class="form-control" name="subject_no" value="<%= cand.subject_no %>">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="">Contenu du mail d'acceptation de candidature *</label><br>
                                                    <span>Vous pouvez utiliser des tags: #ecole_name#, #ecole_email#, #etudiant_name#, #etudiant_email#</span>
                                                    <textarea class="form-control content_ok" id="content_ok" placeholder="Contenu du mail d'acceptation de candidature"><%= cand.content_ok %></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="">Contenu du mail de refus de candidature *</label><br>
                                                    <span>Vous pouvez utiliser des tags: #ecole_name#, #ecole_email#, #etudiant_name#, #etudiant_email#</span>
                                                    <textarea class="form-control content_no" id="content_no" placeholder="Contenu du mail de refus de candidature"><%= cand.content_no %></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12" style="display: flex;justify-content: center;">
                                            <button class="btn-hover btn-border-radius color-7 submit_reponse" attr-type="save">Sauvegarder</button>
                                        </div>
                                    </form> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('../partials/footer')-%> 
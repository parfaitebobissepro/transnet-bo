<%- include('../partials/header') -%> 
<style>
    .avatarimg{
        border-radius: 50%;
        width: 4rem;
        height: 4rem;
        object-fit: cover;
    }
    div.dataTables_scrollBody table tbody tr:first-child th, div.dataTables_scrollBody table tbody tr:first-child td {
        border-top: 0;
        text-align: center;
    }
    .table thead tr th {
        padding: 10px;
        border-bottom: 1px solid #eee;
        text-align: center;
    }
    .statuu-pending{
        margin: 0;
        background: #4068a3;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
    .statuu-ok{
        margin: 0;
        background: #33b689;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
    .statuu-ko{
        margin: 0;
        background: #f44336;
        color: white;
        padding: 2px;
        border-radius: 20px;
        text-align: center;
    }
    .addavis {
        background-image: linear-gradient(to right, #212529, #212529, #03a9f3, #212529);
        -webkit-box-shadow: 0 4px 15px 0 rgb(252 104 110 / 75%);
        -moz-box-shadow: 0 4px 15px 0 rgba(252, 104, 110, 0.75);
        -ms-box-shadow: 0 4px 15px 0 rgba(252, 104, 110, 0.75);
        box-shadow: 0 0px 5px 0 #212529;
    }
    .btn-hover.color-77 {
        background-image: linear-gradient(to right, #4068a3, #4068a3, #4068a3, #4068a3);
        -webkit-box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
        -moz-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        -ms-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
    }
</style>
<section class="content">
    <div class="container-fluid">
        <!-- Exportable Table -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-top: 4rem;">
                    <div class="header">
                        <h3 class="text-white mb-0" style="color: #000 !important;">Liste des textes d'emails de réponse</h3>
                        <h5 style="margin-top: 1rem;"><%= users.length %> Candidature(s)</h5>
                        <div class="header-dropdown m-r--5">
                            <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5" onclick="window.location='/dashboard/reponsemail/add'">Ajouter</button>
                        </div>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table  id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Ecole</th>
                                        <th>Sujet accepté</th>
                                        <th>Sujet refusé</th>
                                        <th>Crée le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user)=>{ %>
                                    <tr>
                                        <td><%= user.user_id.nom_ecole %></td>
                                        <td><%= user.subject_ok %></td>
                                        <td><%= user.subject_no %></td>
                                        <td><%= user.createdAt.toISOString().slice(0, 19).replace(/-/g, "/").replace("T", " ") %></td>
                                        <td>
                                            <!-- <a href="/user/details/<%= user.id %>" class="btn btn-tbl-edit"><i class="fa fa-eye"></i> View</a> -->
                                            <a href="/dashboard/reponsemail/edit/<%= user.id %>" class="btn btn-tbl-edit" title="Modifier">
                                                <i class="material-icons">create</i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table -->
    </div>
</section>
<%- include('../partials/footer') -%> 
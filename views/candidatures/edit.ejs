<%-include('../partials/header')-%> 
<style>
    .formationsave{
        width: 100%;
    }
    input[type=text], input[type=email]{
      border: 1px solid #0f3042 !important;
      border-radius: 5px !important;
      background: transparent !important;
      padding: 0px 7px !important;
    }
    input[type=text]:focus, input[type=email]:focus{
      border: 1px solid #78ae61 !important;
      -webkit-box-shadow: 0 1px 0 0 #78ae61 !important;
      box-shadow: 0 1px 0 0 #78ae61 !important;
    }
    .form-group .form-control{
        width: 97% !important;
    }
    .eleve_form, .ecole_form{
        display: none;
        margin-top: 1rem;
    }
    .usertype_selector h3{
        text-align: center;
    }
    .usertype_selector{
        border: 1px #4169a3 solid;
        color: black;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector.active{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
    }
    .usertype_selector:hover{
        border: 1px #4169a3 solid;
        color: white;
        background-color: #4169a3;
        -webkit-transition: background-color 400ms linear;
        -ms-transition: background-color 400ms linear;
        transition: background-color 400ms linear;
        width: 48%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        border-radius: 15px;
        cursor: pointer;
    }
    .divselectorentoure{
        padding: 1rem;
    }
    .addinguser hr{
        width: 100%;
        margin-bottom: 2rem;
        border-top: 2px solid rgb(64 104 163);
    }
    .ms-choice>span {
        position: absolute;
        top: 5px;
    }
    .languesa{
        padding: 0;
    }
</style>
<section class="content addinguser">
    <div class="container-fluid">
        <div class="content" style="padding-top:30px;">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Ajouter</strong> une candidature
                                </h2>
                            </div>
                            <div class="body">
                                <div class="row">
                                    <form class="candidaturesave">
                                        <input type="hidden" name="id_candidature" value="<%= cand._id %>">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Nom de la candidature *</label>
                                                <input type="text" class="form-control" placeholder="Nom de la candidature" name="nom" value="<%= cand.nom %>">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Description de la candidature *</label>
                                                <textarea class="form-control description_candidature" id="description_candidature" placeholder="Description de la candidature">
                                                    <%= cand.description %>
                                                </textarea>
                                            </div>
                                        </div>
                                        <div class="row" style="padding: 2rem;">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Etudiant *</label>
                                                    <select class="form-control" name="user_id" disabled>
                                                        <% user.forEach((item)=>{ %>
                                                            <option value="<%= item._id %>" <%= item._id == cand.user_id.toString() ? "selected":"" %>><%= item.name %></option>
                                                        <% }) %> 
                                                    </select>   
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Formation *</label>
                                                    <select class="form-control formcand" name="formation_id[]" multiple="multiple" disabled>
                                                        <% formation.forEach((items)=>{ %>
                                                            <option value="<%= items._id %>" <%= items._id == cand.formation_id.toString() ? "selected" : "" %>><%= items.nom %></option>
                                                        <% }) %> 
                                                    </select>   
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="">Pièce jointe</label>
                                                    <input type="file" class="form-control" name="fichier"><br>
                                                    <a href="<%= cand.fichier %>" target="_blank">Cliquer pour voir la pièce <i class="material-icons" style="font-size:15px;position: relative;top: 3px;">remove_red_eye</i></a>
                                                </div>
                                            </div>
                                            <!-- <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">Statut</label>
                                                    <select class="form-control" name="statut">
                                                        <option value="En cours de traitement" <%= cand.statut == "En cours de traitement" ? "selected" : "" %>>En cours de traitement</option>
                                                        <option value="Candidature acceptée" <%= cand.statut == "Candidature acceptée" ? "selected" : "" %>>Candidature acceptée</option>
                                                        <option value="Candidature refusée" <%= cand.statut == "Candidature refusée" ? "selected" : "" %>>Candidature refusée</option>
                                                    </select>   
                                                </div>
                                            </div> -->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="">Commentaire à l'école </label>
                                                    <textarea class="form-control comment_candidature" id="comment_candidature" placeholder="Commentaire à l'école">
                                                        <%= cand.comment %>
                                                    </textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12" style="display: flex;justify-content: center;">
                                            <button class="btn-hover btn-border-radius color-7 submit_candidature" attr-type="edit">Sauvegarder</button>
                                        </div>
                                    </form> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('../partials/footer')-%> 
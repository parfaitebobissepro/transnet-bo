<form class="ecoleformulairesave" enctype="multipart/form-data">
    <input type="hidden" class="id_eleve" value="no">
    <div class="row">
        <div class="col-md-12">
            <h5>IMAGES</h5>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="">Photo de profil</label>
                <input type="file" class="form-control" name="photo_ecole">
            </div>
        </div>
        <div class="col-md-12">
            <h5>RENSEIGNEMENTS DU TRANSPORTEUR</h5>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Nom d'utilisateur *</label>
                <input type="text" class="form-control" placeholder="Nom d'utilisateur" name="username">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Nom du transporteur *</label>
                <input type="text" class="form-control" placeholder="Nom du transporteur" name="name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Courriel du transporteur  *</label>
                <input type="email" class="form-control" placeholder="Courriel du transporteur " name="email">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Téléphone du transporteur *</label>
                <input type="text" class="form-control zcode2" data-intl-tel-input-id="0" style="width: 87.5% !important;">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Numéro de carte bancaire *</label>
                <input type="number" class="form-control card_number" name="card_number">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Date d'expiration *</label>
                <input type="text" class="form-control card_expiration" name="card_expiration">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Mot de passe</label>
                <input type="password" class="form-control pwd_ecole" name="password">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Confirmer Mot de passe</label>
                <input type="password" class="form-control pwd_confirm_ecole">
            </div>
        </div>
        <div class="col-md-12" style="display: flex;justify-content: center;">
            <button class="btn-hover btn-border-radius color-7 submit_all_ecole" attr-type="save">Sauvegarder</button>
        </div>
    </div>
</form>
                                <label for="">Description card 1 (en anglais) *</label>
                                <textarea id="desc_bloc_ccm_card1_edit_en" class="form-control"><%= offre.desc_bloc_ccm_card1_en %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre card 2 *</label>
                                <input type="text" class="form-control" name="titre_bloc_ccm_card2" value="<%= offre.titre_bloc_ccm_card2 %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre card 2 (en anglais) *</label>
                                <input type="text" class="form-control" name="titre_bloc_ccm_card2_en" value="<%= offre.titre_bloc_ccm_card2_en %>">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="">Description card 2 *</label>
                                <textarea id="desc_bloc_ccm_card2_edit" class="form-control"><%= offre.desc_bloc_ccm_card2 %></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">

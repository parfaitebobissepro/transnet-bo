                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="">Description card 3 (en anglais) *</label>
                                <textarea id="desc_bloc_ccm_card3_edit_en" class="form-control"><%= offre.desc_bloc_ccm_card3_en %></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-hover btn-border-radius addavis" data-dismiss="modal"
                    style="margin-top: 3px;">Fermer</button>
                <button style="margin-top:0px;" class="btn-hover btn-border-radius color-5 save_offre" attr-type="save"
                    attr-unit="description_avis0">Enregistrer</button>
            </div>
        </div>
    </div>
</div>
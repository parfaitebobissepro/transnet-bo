<div class="modal fade bd-example-modal-lg" id="exampleModalCenterOffre<%= offre._id %>" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Editer Page Nos Offres</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="offresave">
                    <input type="hidden" name="id_offre" value="<%= offre._id %>">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Bannière et Bloc 1</h3>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="">Image bannière *</label>
                                <input type="file" class="form-control" name="image_banner"><br>
                                <img src="<%= offre.image_banner %>" alt="<%= offre.titre_bloc1 %>" style="width: 10rem;object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre bloc 1 *</label>
                                <input type="text" class="form-control" name="titre_bloc1" value="<%= offre.titre_bloc1 %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre bloc 1 (en anglais) *</label>
                                <input type="text" class="form-control" name="titre_bloc1_en" value="<%= offre.titre_bloc1_en %>">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <h3>Bloc Offre</h3>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre *</label>
                                <input type="text" class="form-control" name="titre_offre_bloc" value="<%= offre.titre_offre_bloc %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Titre (en anglais) *</label>
                                <input type="text" class="form-control" name="titre_offre_bloc_en" value="<%= offre.titre_offre_bloc_en %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Nous contacter *</label>
                                <input type="text" class="form-control" name="nous_contacter" value="<%= offre.nous_contacter %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Nous contacter (en anglais) *</label>
                                <input type="text" class="form-control" name="nous_contacter_en" value="<%= offre.nous_contacter_en %>">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="">Description *</label>
                                <textarea id="desc_offre_bloc_edit" class="form-control"><%= offre.desc_offre_bloc %></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="">Description (en anglais) *</label>
                                <textarea id="desc_offre_bloc_edit_en" class="form-control"><%= offre.desc_offre_bloc_en %></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <h3>Bloc Comment ca marche</h3>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">

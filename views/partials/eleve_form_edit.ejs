<style>
    .education-eleve,
    .experience-eleve,
    .langue-eleve,
    .honneurs-eleve,
    .autrepiece-eleve {
        width: 100%;
        padding: 2rem;
        padding-bottom: 0;
    }

    .btn-hover.color-7 {
        background-image: linear-gradient(to right, #78ae61, #4068a3, #78ae61, #4068a3);
        -webkit-box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
        -moz-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        -ms-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
    }

    .btn-hover.color-8 {
        background-image: linear-gradient(to right, #4068a3, #212529, #78ae61, #212529);
        -webkit-box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
        -moz-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        -ms-box-shadow: 0 4px 15px 0 rgba(45, 54, 65, 0.75);
        box-shadow: 0 4px 15px 0 rgb(45 54 65 / 75%);
    }

    i.material-icons.pull-left.testdeclose {
        color: red;
        position: absolute;
        /* top: 1px; */
        right: 2rem;
        cursor: pointer;
    }

    .select2-container {
        box-sizing: border-box;
        display: inline-block;
        margin: 0;
        position: relative;
        vertical-align: middle;
        width: 100% !important;
        height: 100%;
    }

    .select2-container--default .select2-selection--single {
        background-color: #fff;
        border: 1px solid #aaa;
        border-radius: 4px;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    select.bs-select-hidden,
    select.selectpicker {
        display: block !important;
        opacity: 1 !important;
        width: 100% !important;
        height: 100% !important;
    }

    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 100% !important;
    }

    .bootstrap-select .dropdown-toggle {
        display: block;
    }

    .bootstrap-select>select {
        position: absolute !important;
        bottom: 0;
        left: 0%;
    }

    .bootstrap-select.btn-group .dropdown-toggle .filter-option {
        display: inline-block;
        overflow: hidden;
        width: 74%;
        position: relative;
        text-align: left;
        top: 0px !important;
        left: 0rem;
        margin-left: 0px !important;
    }

    .iti input,
    .iti input[type=text],
    .iti input[type=tel] {
        position: relative;
        z-index: 0;
        margin-top: 0 !important;
        margin-bottom: 0 !important;
        padding-right: 36px;
        margin-right: 0;
        padding-left: 4rem !important;
        width: 82% !important;
    }
</style>
<form class="eleveformulairesave" enctype="multipart/form-data">
    <input type="hidden" class="id_eleve" value="<%= user._id %>">
    <div style="display: none;">
        <input type="hidden" class="form-control zcode30">
        <input type="hidden" class="form-control zcode31">
        <input type="hidden" class="form-control zcode33">
    </div>
    <div class="row">
        <div class="col-md-12">
            <h5>IMAGES</h5>
            <!-- <p>
                <%= user %>
            </p> -->
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="">Photo de profil</label>
                <input type="file" class="form-control" name="pic"><br>
                <img src="<%= user.pic %>" alt="<%= user.name %>" style="width: 10rem;object-fit: cover;">
            </div>
        </div>
        <div class="col-md-12">
            <h5>RENSEIGNEMENTS PERSONNELS</h5>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">Nom d'utilisateur *</label>
                <input type="text" class="form-control" placeholder="Nom d'utilisateur" name="username" value="<%= user.username %>">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">Nom de famille *</label>
                <input type="text" class="form-control" placeholder="Nom" name="name" value="<%= user.name %>">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="">Prénom *</label>
                <input type="text" class="form-control" placeholder="Prénom" name="prenom" value="<%= user.prenom %>">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Email *</label>
                <input type="email" class="form-control" placeholder="Email" name="email" value="<%= user.email %>">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Date de naissance *</label>
                <input type="text" class="form-control datepicker" class="dob" name="naissance" value="<%= user.naissance %>">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Sexe *</label>
                <select class="form-control" name="sexe">
                    <option value="Masculin" <%= user.sexe == 'Masculin' ? 'selected' : '' %>>Masculin</option>
                    <option value="Féminin" <%= user.sexe == 'Féminin' ? 'selected' : '' %>>Féminin</option>
                    <option value="Autres" <%= user.sexe == 'Autres' ? 'selected' : '' %>>Autres</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Téléphone portable *</label>
                <input type="text" class="form-control zcode1" class="dob" data-intl-tel-input-id="0" name="phone_test" value="<%= user.phone != undefined ? user.phone.includes('|') ? user.phone.split('|')[0] : '' : '' %>">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Mot de passe</label>
                <input type="password" class="form-control pwd_eleve" name="password">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Confirmer Mot de passe</label>
                <input type="password" class="form-control pwd_confirm_eleve">
            </div>
        </div>
        <div class="col-md-12" style="display: flex;justify-content: center;">
            <button class="btn-hover btn-border-radius color-7 submit_all" attr-type="save">Sauvegarder</button>
        </div>
    </div>
</form>